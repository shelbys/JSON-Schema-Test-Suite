[
    {
        "description": "pattern validation",
        "schema": {"pattern": "^a*$"},
        "tests": [
            {
                "description": "a matching pattern is valid",
                "data": "aaa",
                "valid": true
            },
            {
                "description": "a non-matching pattern is invalid",
                "data": "abc",
                "valid": false
            },
            {
              "description": "empty string is valid",
              "data": "",
              "valid": true
            },
            {
                "description": "handles non-strings",
                "data": true,
                "valid": false
            }
        ]
    }
]
